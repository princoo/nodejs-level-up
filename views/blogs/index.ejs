<html>
    

    <%- include('../../partials/header.ejs') %>

<body>
    <%- include('../../partials/nav.ejs') %>


    <h2 style="margin-left :45%;font-family: Arial, Helvetica, sans-serif;"> ALL BLOGS </h2>
    
    <div class="change" style="background-color: rgb(223, 168, 168);width: 40%;height: 47%;  margin-left: 50px;
    ">
    <% if(blogs.length > 0){ %>
        <% for(let i=0; i < blogs.length; i++) { %>
            <div class="myslides fade">
            <img src="<%=(blogs[i].cloudinary_url)%>" style="width: 100%;">
            <h4 class="main-title" ><%=(blogs[i].title)%> </h4>
            </div>          
          <% } %>
          <% } else{%>
            <p>there are no blogs yet</p>
            <%}%>
             <!--prev, next-->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
           
    </div>
     <!--dots circles-->
     <div style="text-align:left">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
      </div>


    
   
  


    <% if(blogs.length > 0){ %>
        <% for(let i=0; i < blogs.length; i++) { %>
            
    <a class="single" href="/blogs/<%= blogs[i]._id %>" style="text-decoration: none;"> 
        <div class="singleblog">    
          <img src="<%=(blogs[i].cloudinary_url)%>" style="width: 100%;">
        <h3 class="title" ><%=(blogs[i].snippete)%> </h3>   
       <p class="snippet" style="margin-top: 10px; "><%=(blogs[i].body) %></p>
          </a>
</div>

        <% } %>
        <% } else{%>
            <p>there are no blogs yet</p>
            <%}%>

<%- include('../../partials/footer.ejs') %>

<script src="valley.js"></script>
</body>




</html> 
